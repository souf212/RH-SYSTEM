@model HR_Management_System.ViewModels.TachesVM
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card shadow-sm mt-4 border-danger">
    <div class="card-header bg-danger text-white">
        <h5 class="mb-0"><i class="fas fa-exclamation-triangle"></i> Confirm Deletion</h5>
    </div>
    <div class="card-body">
        <h5 class="text-danger fw-bold">Are you sure you want to delete this task?</h5>
        <p><strong><i class="fas fa-heading"></i> Title:</strong> @Model.Title</p>
        <p><strong><i class="fas fa-file-alt"></i> Description:</strong> @Model.Description</p>
        <p><strong><i class="fas fa-user"></i> Assigned To:</strong> @Model.AssignedTo</p>

        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-danger me-2">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
                <a asp-action="Basic1" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />
