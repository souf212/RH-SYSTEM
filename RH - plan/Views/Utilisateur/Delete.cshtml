@model HR_Management_System.ViewModels.UserVM

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Supprimer l'utilisateur</h2>
<p>Voulez-vous vraiment supprimer @Model.Nom @Model.Prenom ?</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Supprimer</button>
    <a asp-action="Index" class="btn btn-secondary">Annuler</a>
</form>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />