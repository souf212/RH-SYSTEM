@model List<Employes>
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";

}
<div class="container">
    <h3>Select an employe to chat with</h3>

    <div class="list-group">
        @foreach (var employe in Model)
        {
            <a href="@Url.Action("Chat", "Messages", new { employeId = employe.IdEmploye })"
               class="list-group-item list-group-item-action">
                @employe.Utilisateur.Nom @employe.Utilisateur.Prenom
            </a>
        }
    </div>
</div>
<style>
    .container h3 {
        margin-bottom: 20px;
        color: #713ce3;
        font-weight: 600;
    }

    .list-group-item {
        border: 1px solid #e2e2e2;
        border-radius: 8px;
        margin-bottom: 10px;
        padding: 15px 20px;
        font-size: 16px;
        font-weight: 500;
        transition: all 0.25s ease;
        background-color: #fff;
        display: flex;
        align-items: center;
    }

        .list-group-item:hover {
            background-color: #f6f3fc;
            color: #713ce3;
            border-color: #d3c6f3;
            transform: translateX(5px);
            box-shadow: 0 2px 8px rgba(113, 60, 227, 0.1);
            text-decoration: none;
        }

        .list-group-item:active,
        .list-group-item:focus {
            background-color: #713ce3;
            color: #fff;
            border-color: #713ce3;
        }
</style>
