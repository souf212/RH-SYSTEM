@model PFA_TEMPLATE.ViewModels.TachesVM
@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h5 class="mb-0"><i class="fas fa-edit"></i> Edit Task Status</h5>
    </div>
    <div class="card-body">
        <form asp-action="EditStatus" method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold"><i class="fas fa-heading"></i> Task Title</label>
                <input asp-for="Title" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="AssignedTo" class="form-label fw-bold"><i class="fas fa-user"></i> Assigned To</label>
                <input asp-for="AssignedTo" class="form-control" readonly />
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label fw-bold"><i class="fas fa-file-alt"></i> Description</label>
                <textarea asp-for="Description" class="form-control" rows="3" readonly></textarea>
            </div>

            <div class="mb-3">
                <label asp-for="Status" class="form-label fw-bold"><i class="fas fa-flag"></i> Status</label>
                @{
                    var statuses = new[] { "Active", "Completed", "Pending" };
                }
                <select asp-for="Status" class="form-select">
                    @foreach (var status in statuses)
                    {
                        <option value="@status" selected="@(Model.Status == status)">@status</option>
                    }
                </select>
            </div>

            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Basic2" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>

<link href="~/css/souf.css" rel="stylesheet" asp-append-version="true" />
