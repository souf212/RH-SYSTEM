@model IEnumerable<PFA_TEMPLATE.ViewModels.UserVM>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
} 

<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-calendar-alt"></i> User List</h5>
        <a asp-action="Create" class="btn btn-light text-primary rounded-pill shadow-sm">
            <i class="fas fa-plus"></i> Add User
        </a>
    </div>
    <div class="table-responsive mt-3">
        <table class="table table-hover align-middle">
            <thead class="bg-light">
                <tr> 
                    <th><i class="fas fa-user"></i> Nom & Prénom</th>
                    <th><i class="fas fa-map-marker-alt"></i> Adresse</th>
                    <th><i class="fas fa-id-card"></i> CIN</th>
                    <th><i class="fas fa-phone"></i> Téléphone</th>
                    <th><i class="fas fa-user-circle"></i> Login</th>
                    <th><i class="fas fa-key"></i> Password</th>
                    <th><i class="fas fa-user-tag"></i> Rôle</th>
                    <th class="text-center"><i class="fas fa-cogs"></i> Actions</th> 
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div class="avatar rounded-circle bg-primary text-white d-flex align-items-center justify-content-center me-2" style="width: 40px; height: 40px;">
                                    @user.Nom.Substring(0,1)@user.Prenom.Substring(0,1)
                                </div>
                                <div>
                                    <strong>@user.Nom @user.Prenom</strong>
                                    <br>
                                    <small class="text-muted">@user.Login</small>
                                </div>
                            </div>
                        </td>
                        <td>@user.Adresse</td>
                        <td><span class="text-muted">@user.CIN</span></td>
                        <td>@user.Telephone</td>
                        <td><span class="text-muted">@user.Login</span></td>
                        <td><span class="text-muted">**********</span></td>
                        <td>
                            <span class="badge @(user.Role == "Admin" ? "bg-danger" : "bg-success")">
                                @user.Role
                            </span>
                        </td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning me-2" title="Modifier">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-outline-danger" title="Supprimer">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<link href="~/css/taches.css" rel="stylesheet" asp-append-version="true" />