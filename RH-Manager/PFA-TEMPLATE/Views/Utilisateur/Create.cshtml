@model PFA_TEMPLATE.ViewModels.UserVM
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}



<div class="card shadow-sm border-0 mt-4">
    <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center">
        <h5 class="mb-0"><i class="fas fa-tasks"></i> Creer l'Utilisateur</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nom" class="form-label fw-bold"><i class="fas fa-heading"></i> Nom</label>
                <input asp-for="Nom" class="form-control" required />
                <span asp-validation-for="Nom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Prenom" class="form-label fw-bold"><i class="fas fa-heading"></i> Prénom</label>
                <input asp-for="Prenom" class="form-control" required />
                <span asp-validation-for="Prenom" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Adresse" class="form-label fw-bold"><i class="fas fa-heading"></i> Adresse</label>
                <input asp-for="Adresse" class="form-control" required />
                <span asp-validation-for="Adresse" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="CIN" class="form-label fw-bold"><i class="fas fa-heading"></i> Cin</label>
                <input asp-for="CIN" class="form-control" required />
                <span asp-validation-for="CIN" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Telephone" class="form-label fw-bold"><i class="fas fa-heading"></i> Telephone</label>
                <input asp-for="Telephone" class="form-control" required />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Login" class="form-label fw-bold"><i class="fas fa-heading"></i> Login</label>
                <input asp-for="Login" class="form-control" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-bold"><i class="fas fa-lock"></i> Password</label>
                <input asp-for="Password" class="form-control" />
            </div>

            <div class="mb-3">
                <label asp-for="Role" class="form-label fw-bold"><i class="fas fa-heading"></i> Role</label>
                <select asp-for="Role" class="form-select">
                    <option value="Employes">Employes</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="d-flex justify-content-end">
                <button type="submit" class="btn btn-success me-2">
                    <i class="fas fa-save"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
            </div>
        </form>
    </div>



</div>


<link href="~/css/taches.css" rel="stylesheet" asp-append-version="true" /> 